{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/ClickAndMortar/AdvancedCsvConnectorBundle/master/Resources/schema/import.json",
  "title": "Akeneo CSV import mapping schema",
  "type": "object",
  "required": [
    "attributes"
  ],
  "properties": {
    "attributes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "attributeCode",
          "dataCode",
          "identifier"
        ],
        "properties": {
          "attributeCode": {
            "type": "string"
          },
          "dataCode": {
            "type": "string"
          },
          "identifier": {
            "type": "boolean"
          },
          "callback": {
            "type": "string"
          },
          "defaultValue": {
            "type": "string"
          },
          "normalizerCallback": {
            "type": "string"
          },
          "deleteIfNull": {
            "type": "boolean"
          },
          "onlyOnCreation": {
            "type": "boolean"
          },
          "locales": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "pattern": "^[a-z]{2}_[A-Z]{2}$"
            }
          }
        }
      }
    },
    "normalizers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "code",
          "values"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "values": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "normalizedValue": {
                  "type": "string"
                },
                "originalValues": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "completeCallback": {
      "type": "string"
    }
  }
}
